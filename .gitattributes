# Set default behavior to automatically normalize line endings
* text=auto

# Unity specific (Binary Files)
*.unity binary
*.prefab binary
*.mat binary
*.asset binary
*.scene binary
*.controller binary
*.anim binary
*.cginc binary
*.shader binary
*.physicMaterial2D binary
*.physicMaterial binary
*.tmPro binary
*.ttf binary
*.otf binary
*.fnt binary
*.fbx binary
*.jpg binary
*.jpeg binary
*.tga binary
*.psd binary
*.mp3 binary
*.wav binary
*.ogg binary
*.mp4 binary
*.mov binary
*.avi binary

# Force text files (like C# scripts) to use LF (Line Feed) for line endings
*.cs text eol=lf
*.shader text eol=lf
*.txt text eol=lf

# Ensure that Unity's .gitignore files are respected
[Ll]ogs/* export-ignore
[Ll]ogFiles/* export-ignore
*.bak export-ignore
*.swp export-ignore
.DS_Store export-ignore
.idea export-ignore

# Large Files that should use LFS (Fixes push issues)
*.png filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.dylib filter=lfs diff=lfs merge=lfs -text
*.so filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.unitypackage filter=lfs diff=lfs merge=lfs -text

# Ignore Unity Library Folder (Unity should regenerate it locally)
ComputerEscape_V2/Library/ArtifactDB filter=lfs diff=lfs merge=lfs -text
ComputerEscape_V2/Library/SourceAssetDB filter=lfs diff=lfs merge=lfs -text
